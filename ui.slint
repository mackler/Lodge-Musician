import { VerticalBox, HorizontalBox, Button, GroupBox } from "std-widgets.slint";

export component MainWindow inherits Window {
    width: 1920px;
    height: 1080px;

    // Properties so user can see which track is playing
    in-out property<bool> opening_procession_playing;
    in-out property<bool> open_great_lights_playing;
    in-out property<bool> rimshot1_playing;
    in-out property<bool> rimshot2_playing;
    in-out property<bool> rimshot3_playing;
    in-out property<bool> rimshot4_playing;

    // Callbacks for each button
    callback toggle_opening_procession();
    callback toggle_open_great_lights();
    callback group1_button3();
    callback toggle_rimshot1();
    callback toggle_rimshot2();
    callback toggle_rimshot3();
    callback toggle_rimshot4();

    HorizontalBox {
        spacing: 24px;
        padding: 16px;

        GroupBox {
            title: "Opening";
            VerticalBox {
                spacing: 8px;
                Button {
                    text: opening_procession_playing ? "◼ Opening Procession" : "▶ Opening Procession";
                    clicked => { root.toggle_opening_procession(); }
                }
                Button {
                    text: "Open Great Lights";
                    clicked => { root.toggle_open_great_lights(); }
                }
                Button {
                    text: "Play Track 3";
                    clicked => { root.group1_button3(); }
                }
            }
        }

        GroupBox {
            title: "Rimshots";
            VerticalBox {
                spacing: 8px;
                Button {
                    text: rimshot1_playing ? "◼ Rimshot 1" : "▶ Rimshot 1";
                    clicked => { root.toggle_rimshot1(); }
                }
                Button {
                    text: "Rimshot 2";
                    clicked => { root.toggle_rimshot2(); }
                }
                Button {
                    text: "Rimshot 3";
                    clicked => { root.toggle_rimshot3(); }
                }
                Button {
                    text: "Rimshot 4";
                    clicked => { root.toggle_rimshot4(); }
                }
            }
        }
    }
}
