import { VerticalBox, HorizontalBox, Button, GroupBox } from "std-widgets.slint";

export component MainWindow inherits Window {
    width: 1920px;
    height: 1080px;

    // Callbacks for each button
    callback toggle_opening_procession();
    callback group1_button2();
    callback group1_button3();
    callback toggle_rimshot1();
    callback group2_button2();
    callback group2_button3();

    HorizontalBox {
        spacing: 24px;
        padding: 16px;

        GroupBox {
            title: "Opening";
            VerticalBox {
                spacing: 8px;
                Button {
                    text: "Opening Procession";
                    clicked => { root.toggle_opening_procession(); }
                }
                Button {
                    text: "Play Track 2";
                    clicked => { root.group1_button2(); }
                }
                Button {
                    text: "Play Track 3";
                    clicked => { root.group1_button3(); }
                }
            }
        }

        GroupBox {
            title: "Rimshots";
            VerticalBox {
                spacing: 8px;
                Button {
                    text: "Effect 1";
                    clicked => { root.toggle_rimshot1(); }
                }
                Button {
                    text: "Effect 2";
                    clicked => { root.group2_button2(); }
                }
                Button {
                    text: "Effect 3";
                    clicked => { root.group2_button3(); }
                }
            }
        }
    }
}
